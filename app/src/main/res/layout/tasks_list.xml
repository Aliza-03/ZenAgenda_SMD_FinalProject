<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/peachie_lite"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:background="#8F9562"
        android:id="@+id/firstrl">

        <ImageView
            android:id="@+id/add_task_btn"
            android:layout_width="58dp"
            android:layout_height="47dp"
            android:layout_alignBottom="@id/chatstv"
            android:layout_marginLeft="100dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/chatstv"
            android:src="@drawable/add">

        </ImageView>

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/baseline_arrow_back_24"
            android:backgroundTint="#495235"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
            />
        <TextView
            android:id="@+id/chatstv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tasks"
            android:layout_marginLeft="50dp"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:fontFamily="@font/playfair_display"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            />



    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/firstrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/to_do_rv"
        ></androidx.recyclerview.widget.RecyclerView>

        <RelativeLayout
            android:id="@+id/expandcompletedtasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/to_do_rv"
            android:layout_marginTop="20dp"
            >

            <ImageButton
                android:id="@+id/expandbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:background="@android:color/transparent"
                android:src="@drawable/baseline_expand_more_24"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed"
                android:layout_toRightOf="@id/expandbutton"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:fontFamily="@font/inter"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/expandcompletedtasks"
            android:id="@+id/firstchatrl"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rectangleroundedcornersforrecyclerviews2"
            android:layout_marginTop="20dp"
            android:backgroundTint="#B87B5C"
            >
            <ImageView
                android:id="@+id/tick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_checkcircle_24"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_toRightOf="@id/tick"
                android:id="@+id/nametv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SE - SRS"
                android:fontFamily="@font/inter"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                />




        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/firstchatrl"
            android:id="@+id/secondchatrl"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rectangleroundedcornersforrecyclerviews2"
            android:layout_marginTop="20dp"
            android:backgroundTint="#B87B5C"
            >
            <ImageView
                android:id="@+id/tick2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_checkcircle_24"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_toRightOf="@id/tick2"
                android:id="@+id/nametv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SMD Assignment 2"
                android:fontFamily="@font/inter"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/secondchatrl"
            android:id="@+id/thirdchatrl"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/rectangleroundedcornersforrecyclerviews2"
            android:layout_marginTop="20dp"
            android:backgroundTint="#B87B5C"
            >
            <ImageView
                android:id="@+id/tick3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_checkcircle_24"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:layout_toRightOf="@id/tick3"
                android:id="@+id/nametv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI - Lab Task"
                android:fontFamily="@font/inter"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                />
        </RelativeLayout>
    </RelativeLayout>



