<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="#8F9562"
        android:id="@+id/firstrl"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backButton"
            android:background="@drawable/baseline_arrow_back_24"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#495235"

            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_person_24"
            android:layout_below="@id/backButton"
            android:layout_centerHorizontal="true"
            android:id="@+id/profileButton"
            android:backgroundTint="#495235"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mr. Forgettable"
            android:layout_below="@id/profileButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/playfairdisplayregular"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFE0"
        android:id="@+id/secondrl"
        android:layout_below="@id/firstrl">

        <TextView
            android:id="@+id/chatBubble"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:background="@drawable/rectangleroundedcornersforchatbubbles"
            android:text="Hi"
            android:fontFamily="@font/playfairdisplayregular"
            android:gravity="center"
            android:minWidth="50dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23:49"
            android:fontFamily="@font/playfairdisplayregular"
            android:textColor="#808080"
            android:layout_below="@id/chatBubble"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/chatBubble2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="10dp"
            android:fontFamily="@font/playfairdisplayregular"
            android:layout_below="@id/chatBubble"
            android:layout_alignParentLeft="true"
            android:background="@drawable/rectangleroundedcornersforchatbubbles"
            android:backgroundTint="#DA983C"
            android:text="Hello"
            android:textColor="@color/black"
            android:gravity="center"
            android:minWidth="50dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23:49"
            android:layout_below="@id/chatBubble2"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:textColor="#808080"
            android:fontFamily="@font/playfairdisplayregular"
            />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Message"
                android:background="@drawable/rectangleroundedcornersforedittexts"
                android:backgroundTint="#F4DDB8"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColorHint="#808080"
                android:textColor="#000000"
                android:paddingRight="80dp"
                android:fontFamily="@font/playfairdisplayregular"
                />
            <ImageButton
                android:id="@+id/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_send_24"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                />
            <ImageButton
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_attach_file_24"
                android:layout_toLeftOf="@id/sendButton"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"

                />

        </RelativeLayout>






    </RelativeLayout>

</RelativeLayout>