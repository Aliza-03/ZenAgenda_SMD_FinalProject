<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFE0"
    android:id="@+id/secondrl">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backButton"
        android:background="@drawable/baseline_arrow_back_24"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#495235"
        />
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        android:textSize="30sp"
        android:layout_below="@id/backButton"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/playfair_display"
        android:textColor="#8F9562"
        />
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:layout_marginBottom="4dp"
        android:layout_below="@id/tv1"
        android:layout_marginLeft="50dp"
        android:textColor="#495235"
        android:textSize="17sp"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/et"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tv2"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rectangleroundedcornersforedittext2"
        android:backgroundTint="#F4DDB8"
        android:hint="Your email"
        android:paddingLeft="20dp"
        android:paddingRight="80dp"
        android:textColor="#000000"
        android:textColorHint="#808080" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et"
        android:layout_centerHorizontal="true"
        android:text="Send email"
        android:fontFamily="@font/inter"
        android:layout_marginTop="30dp"
        android:backgroundTint="#8F9562"
        android:textColor="#F4DDB8"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Already have an account? Log in"
        android:layout_centerHorizontal="true"
        android:textColor="#495235"
        android:fontFamily="@font/inter"
        android:layout_marginBottom="20dp"
        />



</RelativeLayout>