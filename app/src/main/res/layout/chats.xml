<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="113dp"
        android:background="#8F9562"
        android:id="@+id/firstrl"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backButton"
            android:background="@drawable/baseline_arrow_back_24"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#495235"

            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/backButton">
            <TextView
                android:id="@+id/chatstv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chats"
                android:layout_marginLeft="50dp"
                android:textSize="40sp"
                android:textColor="@color/white"
                android:fontFamily="@font/playfairdisplayregular"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/chatstv"
                android:src="@drawable/baseline_mark_unread_chat_alt_24"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="32dp"
                />


        </RelativeLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/firstrl"
        android:background="#FFFFE0"
        >
        <RelativeLayout
            android:id="@+id/firstchatrl"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangleroundedcornersforrecyclerviews"
            android:layout_marginTop="20dp"
            android:backgroundTint="#B87B5C"
            >
            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/nametv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mr. Forgettable"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="22dp"
                />
            <ImageView
                android:id="@+id/tick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_check_24"
                android:layout_below="@id/nametv"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/messagetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nametv"
                android:layout_marginLeft="1dp"
                android:text="Can we get started?"
                android:textColor="#000000"
                android:layout_toRightOf="@id/tick"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="15dp"
                />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/secondchatrl"
            android:layout_below="@id/firstchatrl"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangleroundedcornersforrecyclerviews"
            android:layout_marginTop="20dp"
            android:backgroundTint="#B87B5C"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_looks_one_24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                />

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/nametv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mr. Pessimistic"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="22dp"
                />

            <TextView
                android:id="@+id/messagetv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nametv2"
                android:text="I know, but we can't."
                android:layout_marginLeft="22dp"
                android:textColor="#000000"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="15dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/thirdchatrl"
            android:layout_below="@id/secondchatrl"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangleroundedcornersforrecyclerviews"
            android:layout_marginTop="20dp"
            android:backgroundTint="#B87B5C"
            >
            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/nametv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mr. Miserable"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="22dp"
                />
            <ImageView
                android:id="@+id/tick3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_check_24"
                android:layout_below="@id/nametv3"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/messagetv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nametv3"
                android:text="Can we get started?"
                android:textColor="#000000"
                android:layout_toRightOf="@id/tick3"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="1dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/fourthchatrl"
            android:layout_below="@id/thirdchatrl"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangleroundedcornersforrecyclerviews"
            android:layout_marginTop="20dp"
            android:backgroundTint="#B87B5C"
            >
            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/nametv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mr. Condescending"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="22dp"
                />
            <ImageView
                android:id="@+id/tick4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_done_all_24"
                android:layout_below="@id/nametv4"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/messagetv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nametv4"
                android:text="Can we get started?"
                android:layout_marginLeft="1dp"
                android:textColor="#000000"
                android:layout_toRightOf="@id/tick4"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="15dp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fifthchatrl"
            android:layout_below="@id/fourthchatrl"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangleroundedcornersforrecyclerviews"
            android:layout_marginTop="20dp"
            android:backgroundTint="#B87B5C"
            >
            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/nametv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mr. Cynical"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="22dp"
                />

            <TextView
                android:id="@+id/messagetv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nametv5"
                android:text="Can we actually go through it one mor..."
                android:layout_marginLeft="22dp"
                android:textColor="#000000"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="15dp"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_looks_two_24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/sixthchatrl"
            android:layout_below="@id/fifthchatrl"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangleroundedcornersforrecyclerviews"
            android:layout_marginTop="20dp"
            android:backgroundTint="#B87B5C"
            >
            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/nametv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mr. Something"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="22dp"
                />

            <TextView
                android:id="@+id/messagetv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nametv6"
                android:text="Can we actually go through it one mor..."
                android:layout_marginLeft="22dp"
                android:textColor="#000000"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="15dp"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_looks_4_24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>