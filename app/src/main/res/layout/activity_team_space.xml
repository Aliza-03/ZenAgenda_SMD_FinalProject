<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraint_parent"
    tools:context=".TeamSpace"
    android:background="@color/peachie_lite">
    <!--During backend implementation this will contain the user's project name-->
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/moss"
        android:id="@+id/proj_appbar"
        app:layout_constraintEnd_toEndOf="@id/constraint_parent"
        app:layout_constraintStart_toStartOf="@id/constraint_parent"
        app:layout_constraintTop_toTopOf="@id/constraint_parent"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMD Project"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            ></TextView>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/proj_appbar"
        app:layout_constraintBottom_toTopOf="@id/proj_nav"
        app:layout_constraintStart_toStartOf="@id/constraint_parent"
        app:layout_constraintEnd_toEndOf="@id/constraint_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="40dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/r1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:text="To Do :"
                    android:fontFamily="@font/playfair_display"
                    android:textSize="30sp"
                    android:id="@+id/todo"
                    ></TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:layout_toEndOf="@id/todo"
                    android:src="@drawable/add"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="12dp"
                    ></ImageView>
            </RelativeLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/brown_sugar"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/r1"
                android:id="@+id/c1"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="120dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/edit"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="  Implement Code"
                    android:textSize="20sp"
                    android:textColor="@color/white"></TextView>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/brown_sugar"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/c1"
                android:id="@+id/c2"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="120dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/edit"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="  Make database"
                    android:textSize="20sp"
                    android:textColor="@color/white"></TextView>
            </com.google.android.material.card.MaterialCardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/r2"
                android:layout_below="@id/c2"

                >

                <TextView
                    android:id="@+id/doing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:fontFamily="@font/playfair_display"
                    android:text="Doing :"
                    android:textSize="30sp"></TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/doing"
                    android:paddingLeft="12dp"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:src="@drawable/add"></ImageView>
            </RelativeLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/orange"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/r2"
                android:id="@+id/c3"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="120dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/edit"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="  Code xml"
                    android:textSize="20sp"
                    android:textColor="@color/white"></TextView>
            </com.google.android.material.card.MaterialCardView>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/r3"
                android:layout_below="@id/c3"

                >

                <TextView
                    android:id="@+id/done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:fontFamily="@font/playfair_display"
                    android:text="Done  :"
                    android:textSize="30sp"></TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/done"
                    android:paddingLeft="12dp"
                    android:scaleX="1.2"
                    android:scaleY="1.2"
                    android:src="@drawable/add"></ImageView>
            </RelativeLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/moss"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/r3"
                android:id="@+id/c4"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="120dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/edit"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="  Make figma board"
                    android:textSize="20sp"
                    android:textColor="@color/white"></TextView>
            </com.google.android.material.card.MaterialCardView>


        </RelativeLayout>

    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/proj_nav"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/fern"
        app:layout_constraintBottom_toBottomOf="@id/constraint_parent"
        app:layout_constraintStart_toStartOf="@id/constraint_parent"
        app:layout_constraintEnd_toEndOf="@id/constraint_parent"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gallery"
            android:src="@drawable/solar_gallery_bold"
            android:paddingLeft="50dp"
            android:layout_gravity="center_vertical"

            ></ImageView>

        <ImageView
            android:id="@+id/home"
            android:layout_width="42dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:src="@drawable/home"

            ></ImageView>

        <ImageView
            android:id="@+id/chat"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:paddingTop="10dp"
            android:paddingRight="50dp"
            android:src="@drawable/ic_baseline_chat"

            ></ImageView>

    </com.google.android.material.bottomnavigation.BottomNavigationView>
</androidx.constraintlayout.widget.ConstraintLayout>